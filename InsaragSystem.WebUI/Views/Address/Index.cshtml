@model IEnumerable<InsaragSystem.Application.DTOs.AddressDTO>

@{
    ViewData["Title"] = "Address List";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="AddByZipCode" class="btn btn-primary">
                    <span title="Register New Address" class="fas fa-plus"></span> Register New Address
                </a>
            </div>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Zip Code</th>
            <th>Street</th>
            <th>District</th>
            <th>City</th>
            <th>State</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var address in Model)
        {
            <tr>
                <td>@address.ZipCode</td>
                <td>@address.Street</td>
                <td>@address.District</td>
                <td>@address.City</td>
                <td>@address.State</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@address.AddressId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@address.AddressId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@address.AddressId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
